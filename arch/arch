[TiP]
loadkeys fr
setfont ter-v22b

[PARTiTiON]
cfdisk /dev/sda
lsblk

mkfs.ext4 /dev/sda3
mount /dev/sda3 /mnt
mkdir /mnt/ugly
mount /dev/sda2 /mnt/ugly
lsblk

[SWAP FiLE]
fallocate -l 2G /mnt/swapfile
chmod 600 /mnt/swapfile
mkswap /mnt/swapfile
swapon /mnt/swapfile
free -h

[iWCTL]
iwctl station wlan0 scan
